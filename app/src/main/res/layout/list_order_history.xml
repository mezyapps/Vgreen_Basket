<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/cardView_order_history"
    android:layout_marginBottom="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/textOrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Order No"
                android:layout_weight="0.6"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:textSize="18sp"
                android:drawablePadding="5dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/textTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_weight="1"
                android:text="Final Price"
                android:textColor="@color/green"
                android:drawableStart="@drawable/ic_vector_money"
                android:drawablePadding="2dp"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:layout_gravity="center"
                android:src="@drawable/ic_vector_right_arrow"/>


        </LinearLayout>


        <TextView
            android:id="@+id/textPartyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Party Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/textOrderDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Order Date"
            android:textColor="@color/black"
            android:textSize="14sp"/>



        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Status"
            android:textColor="@color/black"
            android:textSize="14sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>